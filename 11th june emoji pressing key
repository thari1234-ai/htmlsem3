  <div id="div1">Press S - Smile ğŸ˜C - Cry ğŸ˜‚</div>

  <script>
    const divElement = document.getElementById('div1');

    document.addEventListener('keydown', function(event) {
      let reaction = "";

      switch (event.key) {
        case 's':
          reaction = "ğŸ˜";
          break;
        case 'c':
          reaction = "ğŸ˜­";
          break;
        default:
          reaction = "ğŸ˜ Press 's' or 'c'";
      }

      divElement.textContent = reaction;
    });
  </script>
